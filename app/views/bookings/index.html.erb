<table>
    <thead>
        <tr class="text_field">
            <th>name</th>
            <th>email</th>
            <th>phone</th>
            <th>no_of_tickets</th>
            <th colspan="4">Actions</th>
        </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
           <td><%= booking.name %></td>
           <td><%= booking.movie_name %></td>
           <td><%= booking.phone %></td>
           <td><%= booking.no_of_tickets %></td>
           <td><%= link_to 'Show', booking_path(booking) %></td>
           <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
           <td><%= link_to 'Delete', booking_path(booking), method: :delete %></td>
         </tr>
       <% end %>
    </tbody>
</table>

